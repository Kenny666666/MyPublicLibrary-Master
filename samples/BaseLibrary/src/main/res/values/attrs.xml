<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="menu">
        <attr name="model">
            <enum name="LEFT" value="0"/>
            <enum name="RIGHT" value="1"/>
            <enum name="BOTTOM" value="2"/>
        </attr>
    </declare-styleable>

    <!-- 自定义进度条属性-->
    <declare-styleable name="ProgressWheel">
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="barColor" format="color"/>
        <attr name="rimColor" format="color"/>
        <attr name="rimWidth" format="dimension"/>
        <attr name="spinSpeed" format="dimension"/>
        <attr name="delayMillis" format="integer"/>
        <attr name="circleColor" format="color"/>
        <attr name="radius" format="dimension"/>
        <attr name="barWidth" format="dimension"/>
        <attr name="barLengths" format="dimension"/>
        <attr name="contourColor" format="color"/>
        <attr name="contourSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleTextView">
        <attr name="ctext" format="string"></attr>
    </declare-styleable>

    <!-- 最强适配用到的自定义属性-->
    <declare-styleable name="AutoLayout_Layout">
        <attr name="layout_auto_width" format="integer"/>
        <attr name="layout_auto_height" format="integer"/>

        <attr name="layout_auto_margin" format="integer"/>
        <attr name="layout_auto_marginLeft" format="integer"/>
        <attr name="layout_auto_marginTop" format="integer"/>
        <attr name="layout_auto_marginRight" format="integer"/>
        <attr name="layout_auto_marginBottom" format="integer"/>
        <attr name="layout_auto_marginStart" format="integer"/>
        <attr name="layout_auto_marginEnd" format="integer"/>

        <attr name="layout_auto_textSize" format="integer"/>

        <attr name="layout_auto_maxWidth" format="integer"/>
        <attr name="layout_auto_maxHeight" format="integer"/>
        <attr name="layout_auto_minWidth" format="integer"/>
        <attr name="layout_auto_minHeight" format="integer"/>

        <attr name="layout_auto_padding" format="integer"/>
        <attr name="layout_auto_paddingTop" format="integer"/>
        <attr name="layout_auto_paddingBottom" format="integer"/>
        <attr name="layout_auto_paddingLeft" format="integer"/>
        <attr name="layout_auto_paddingRight" format="integer"/>
    </declare-styleable>
    <!--首页底部，自定义view-->
    <attr name="weixin_icon" format="reference"></attr>
    <attr name="weixin_color" format="color"></attr>
    <attr name="weixin_text" format="string"></attr>
    <attr name="weixin_text_size" format="dimension"></attr>

    <declare-styleable name="ChangeColorIconWithText">
        <attr name="weixin_icon"></attr>
        <attr name="weixin_color"></attr>
        <attr name="weixin_text"></attr>
        <attr name="weixin_text_size"></attr>
    </declare-styleable>
</resources>